<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/lighter"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="8dp">
            <TextView
                android:id="@+id/order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:hint="Order Number"
                android:textColorHint="@color/mustard"
                android:textColor="@color/mustard"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/order_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="Order Email"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/order_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:hint="Order Status"
                android:fontFamily="@font/graduate"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/order_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:hint="Order Total"
                android:textColorHint="@color/orange"
                android:textSize="16sp"
                android:textColor="@color/orange"/>
        </LinearLayout>
        <ImageButton
            android:id="@+id/check_order"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="delete_item_button"
            android:src="@drawable/baseline_navigate_next_24" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>