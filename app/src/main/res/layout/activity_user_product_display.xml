<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Retail_DisplayProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lighter"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backbutton19"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_back_7"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            tools:ignore="SpeakableTextPresentCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@color/grey"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Name"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/white"
                android:text="Type"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/white"
                android:text="Description"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/product_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:text="Available Quantity"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:gravity="right"
                android:textColor="@color/white"
                android:text="$40"
                android:textSize="25dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/product_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="8dp"
                android:gravity="right"
                android:textColor="@color/white"
                android:text="$40"
                android:visibility="gone"
                android:textSize="25dp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@color/grey"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/user_quantity_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textColor="@color/white"
                    android:text="Quantity:"
                    android:textSize="25dp"
                    android:textStyle="bold" />
                <EditText
                    android:id="@+id/user_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:gravity="right"
                    android:hint="Input Quantity"
                    android:textSize="25dp"
                    android:textColorHint="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
            <Button
                android:id="@+id/add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to Cart" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>